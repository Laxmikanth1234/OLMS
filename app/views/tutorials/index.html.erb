<% provide(:title, 'Online Learning Management System-Tutorials') %>
<fieldset>
  <legend>
    Tutorials
    <%= link_to "Add Tutorial",new_tutorial_path,:class => 'btn btn-info pull-right',:rel => "facebox" %>
  </legend>
  <table class="datatable table">
    <thead style="">
      <tr>
        <th data-toggle="true">
          Title
        </th>
        <th>
          Category
        </th>
        <th data-hide="phone,tablet">
          Active
        </th>
        <th data-hide="phone,tablet">
          Video URL
        </th>
        <th data-hide="phone,tablet">
          View Type
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tutorials.each do |tot| %>
        <tr>
        <td><%= tot.title %> </td>
        <td><%= tot.category %> </td>
        <td><%= tot.active %></td>
        <td><%= tot.video_url %></td>
        <td><%= tot.paid %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</fieldset>
